#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""center_text - $description
"""

import argparse
import sys
import os
import fileinput
import textwrap

__author__ = "John van Zantvoort"
__copyright__ = "$copyright"
__email__ = "John@vanZantvoort.org"
__license__ = "none"
__version__ = "1.0.1"

def alib(comments):

     pre_str = "  "
     con_str = "  "
     wrapper = textwrap.TextWrapper(initial_indent=pre_str, subsequent_indent=con_str)
     retv = str()
     clist = comments.split('\n')
     done = False
     for citem in clist:
         if done:
             pre_str = con_str
         for line in wrapper.wrap(citem):
             retv += line.center(76)
             done = True
     return retv


def parse_args(args):
    """
    Parse command line parameters

    :param args: command line parameters as list of strings
    :return: command line parameters as :obj:`argparse.Namespace`
    """
    parser = argparse.ArgumentParser()

    parser.add_argument(
        '--version',
        action='version',
        version='center_text {ver}'.format(ver=__version__))

    parser.add_argument('rest', nargs='*')


    opts = vars(parser.parse_args(args))


    return {k: v for k, v in opts.items() if v is not None}


def main(args):
    args = parse_args(args)
    for line in fileinput.input():
        outtext = alib(line)
        print outtext
    print "-" * 80

if __name__ == "__main__":
    try:
        main(sys.argv[1:])
    except IOError:
        sys.exit("echo Foo | {0}".format(sys.argv[0]))

